<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/ns_primary</item>
        <item name="android:colorPrimaryDark">@color/ns_primaryDark</item>
        <item name="android:colorAccent">@color/ns_accent</item>
    </style>

    <!-- Launch screen theme -->
    <style name="LaunchScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>